

.cart
  padding 15px 20px
  background white
  margin-top 35px
  box-shadow 0px 0 3px rgba(0,0,0,.3)

  h2
    color #C8c8c8
    margin-bottom 25px

  button
    @extend .transition
    width 100%
    padding 10px 0
    font-size 17px
    border 1px solid primary
    background primary
    color white

    &:hover
      background white
      color primary
